<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="5.3" client="site" method="upgrade">
    <name>mod_ezcarousel</name>
    <author>WebLynx</author>
    <creationDate>September 2025</creationDate>
    <copyright>Copyright (C) 2025 WebLynx. All rights reserved.</copyright>
    <license>GNU General Public License version 2 or later</license>
    <authorEmail>contact@weblynx.com</authorEmail>
    <authorUrl>https://weblynx.com</authorUrl>
    <version>1.1.0</version>
    <description>EZ Carousel: A video carousel module for Joomla supporting YouTube, Vimeo, Rumble, and Dailymotion with a larger active video.</description>
    <files>
        <filename module="mod_ezcarousel">mod_ezcarousel.php</filename>
        <filename>helper.php</filename>
        <folder>tmpl</folder>
        <folder>fields</folder>
        <folder>css</folder>
    </files>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field
                    name="videos"
                    type="subform"
                    label="Videos"
                    description="Add and order videos from YouTube, Vimeo, Rumble, or Dailymotion by URL."
                    multiple="true"
                    min="0"
                    max="20"
                    layout="joomla.form.field.subform.repeatable-table"
                    formsource="modules/mod_ezcarousel/fields/video.xml"
                />
            </fieldset>
            <fieldset name="advanced">
                <field name="moduleclass_sfx" type="text" label="Module Class Suffix" />
            </fieldset>
        </fields>
    </config>
</extension>